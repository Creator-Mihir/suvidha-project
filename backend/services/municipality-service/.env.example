# Service Port
PORT=3006

# Environment
NODE_ENV=development

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=municipality_db
DB_USER=your_db_username
DB_PASSWORD=your_db_password

# JWT Secret (change in production)
JWT_SECRET=your_super_secret_jwt_key

# Dummy Server (External Microservice Simulation)
DUMMY_SERVER_URL=http://localhost:4004

# Use Dummy Server or Local DB
# true  -> use friend's dummy server
# false -> use local database
USE_DUMMY_SERVER=false